<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/img_actionbar</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/img_actionbar</item>
    </style>
    
    
    <style name="CustomActionBarTheme2"
           parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar2</item>
        <item name="android:actionBarTabStyle">@style/Theme.Creaim.ActionBarTab</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar2</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar2"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@drawable/img_actionbar2</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/img_actionbar2</item>
    </style>
    
    <style name="CustomActionBarTheme3"
           parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar3</item>
        <item name="android:actionBarTabStyle">@style/Theme.Creaim.ActionBarTab</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar3</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar3"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@drawable/img_actionbar3</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/img_actionbar3</item>
    </style>
    
    <style name="Theme.Creaim.ActionBarTab" 
        parent="android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_example</item>
    </style>
    
    


    
</resources>