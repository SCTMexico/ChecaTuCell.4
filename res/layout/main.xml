<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg_menu"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/buttonA"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:background="@drawable/selector_telephonydata_button_bg"
            android:orientation="vertical"
            android:clickable="true">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_telephony_button" />

            <TextView
                android:id="@+id/textViewTele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="205dp"
                android:layout_centerHorizontal="true"
                android:text="TelefonÃ­a" 
                android:textColor="#ffffff"/>
            
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buttonB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:background="@drawable/selector_telephonydata_button_bg"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_data_button" />
            
            <TextView
                android:id="@+id/textViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="205dp"
                android:layout_centerHorizontal="true"
                android:text="Datos" 
                android:textColor="#ffffff"/>
        </RelativeLayout>
    </LinearLayout>

    
    
    
    
    <FrameLayout
        android:id="@+id/container_menunuttons_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttons_layout"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" 
        >

        
    </FrameLayout>
        
</RelativeLayout>